<Window x:Class="islamovski.fatih._4h.threads.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:islamovski.fatih._4h.threads"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button x:Name="btnGo" Click="btnGo_Click" Width="100" >go</Button>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock x:Name="txtCounter1" FontSize="50">0</TextBlock>
            <TextBlock x:Name="txtCounter2" FontSize="50">0</TextBlock>
        </StackPanel>


    </Grid>
</Window>
